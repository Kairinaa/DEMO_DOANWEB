@model PagedList.IPagedList<QuanLyVatTuPhanXuong.Models.tNuocSX>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";

}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>Index</h2>

<p>

</p>
<table class="table" border="2">
    <tr>
        <th>
            Mã Nước
        </th>
        <th>
            Tên Nước
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNuoc)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaNuoc }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNuoc }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaNuoc }) |
                @Html.ActionLink("Thêm mới", "Create") |
                @Html.ActionLink("Tìm kiếm", "Find") 
            </td>
        </tr>
    }
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</table>
