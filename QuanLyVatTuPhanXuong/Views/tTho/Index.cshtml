@model PagedList.IPagedList<QuanLyVatTuPhanXuong.Models.tTho>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<h2>Index</h2>
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Tìm kiếm", "Find")
</p>
<table class="table">
    <tr>
        <th>
MaTho
        </th>
        <th>
TenTho
        </th>
        <th>
            BacTho
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BacTho)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTho }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTho }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaTho }) |
                @Html.ActionLink("Thêm mới", "Create") |
                @Html.ActionLink("Tìm kiếm", "Find")
            </td>
        </tr>
    }
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</table>
